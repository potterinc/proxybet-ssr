<% tickets.forEach((ticket, i) => { %>

    <div class="card card-bg my-2">
        <div class="card-body py-0">
            <div class="row border-bottom">
                <div class="col-md-2"></div>
                <div class="col-md-8 text-center header-text">
                    <span> Bet Slip: <%= ticket._id %></span><br>
                    <span class="badge">
                        <span class="">Posted: </span><span class="col-md-4 text-secondary"><% new Date(ticket.dateIssued).getHours() %> </span>
                    </span>
                </div>
                <div class="col-md-2"></div>
            </div>
            <div class="row">
                <div class="col-lg-8 col-md-12">
                    <p class="row text-center border-bottom my-0">
                        <span class="col-12 header-text white-text">Matches </span>
                    </p>
                    <div class="row border-bottom text-center py-2 my-0">
                        <% ticket.games.forEach((game)=>{ %>

                            <div class="px-1 d-flex justify-content-between">
                                <span class="text-secondary badge"><%=game.matchTime %></span>
                                <span class=""><strong><%=game.home %></strong></span>
                                <span class="text-warning badge">VS</span>
                                <span class=""><strong><%= game.away %></strong></span>
                                <span class="text-info badge"><%= game.betOptions %> - <%= game.odds %>
                                    <% if(game.matchResult) { %>
                                        <span class="text-success"><i class="bi bi-check-circle"></i></span>
                                    <% } else { %>
                                        <span class="text-danger"><i class="bi bi-x-circle"></i></span>
                                    <% } %>
                                </span>
                            </div>
                            <% }) %>
                    </div>
                <div class="col-lg-4 col-md-12 border-left border-right border-bottom">
                    <p class="row border-bottom text-center my-0">
                        <span class="col-md-12 header-text white-text">Bet Analysis </span>
                    </p>
                    <p class="row border-bottom my-0">
                        <span class="col-7">Total Odds:</span>
                        <span class="col-5 border-left-sm text-info badge"><%=totalOdds[i] %></span>
                    </p>
                    <p class="row border-bottom my-0 d-flex justify-content-between">
                        <span class="col-7">Stake Limit:</span>
                        <span class="col-5 border-left-sm text-primary badge"><%=ticket.userStakeLimit %></span>
                    </p>
                    <p class="row border-bottom my-0 d-flex justify-content-between">
                        <span class="col-7">Ticket Limit:</span>
                        <span class="col-5 border-left-sm text-primary badge"><%=ticket.maximumStake %></span>
                    </p>
                    <p class="row border-bottom my-0 d-flex justify-content-between">
                        <span class="col-7">Status: </span>
                        <span class="col-5 border-left-sm text-warning badge"><%ticket.slipStatus %></span>
                    </p>
                    <p class="row border-bottom my-0 d-flex justify-content-between">
                        <span class="col-7">Ticket Bonus: </span>
                        <span class="col-5 border-left-sm text-success badge">5%</span>
                    </p>
                    <p class="row border-bottom my-0 d-flex justify-content-between">
                        <span class="col-7">Result: </span>
                        <%if(ticket.result){%>
                            <span class="col-5 border-left-sm text-secondary badge">
                                <i class="bi bi-check-circle"></i>
                            </span>
                            
                          <% } %>
                          <%if(!ticket.result){%>
                            <span class="col-5 border-left-sm text-danger badge">
                                <i class="bi bi-x-check-circle"></i>
                            </span>
                          <% } %>
                    </p>
                    <div class="row">
                        <span class="col-lg-2 col-md-4 col-sm-3"></span>
                        <a class="col-lg-8 col-md-4 col-sm-6 btn btn-success my-3">Place Bet</a>
                        <span class="col-lg-2 col-md-4 col-sm-3"></span>
                    </div>
                </div>
            </div>
            <div class="row"></div>
        </div>
    </div>
    <% }) %>